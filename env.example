# ============================================
# ARIYA BACKEND - ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# --------------------------------------------
# Node Environment
# --------------------------------------------
NODE_ENV=development

# --------------------------------------------
# Database Configuration
# --------------------------------------------
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://ariya_user:ariya_password@localhost:5432/ariya_db

# Test database (for running tests)
TEST_DATABASE_URL=postgresql://ariya_user:ariya_password@localhost:5432/ariya_test_db

# --------------------------------------------
# Authentication & JWT
# --------------------------------------------
# Generate secure secrets with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-at-least-32-characters-long
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# --------------------------------------------
# NextAuth Configuration
# --------------------------------------------
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-nextauth-key-at-least-32-characters-long

# --------------------------------------------
# Redis Configuration (Optional for development)
# --------------------------------------------
# Required for production rate limiting and caching
# REDIS_URL=redis://localhost:6379

# --------------------------------------------
# Email Service Configuration (Optional)
# --------------------------------------------
# For password reset, email verification, etc.
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@ariya.com

# --------------------------------------------
# Stripe Payment Configuration (Optional)
# --------------------------------------------
# Get these from https://dashboard.stripe.com/apikeys
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_PUBLISHABLE_KEY=pk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# --------------------------------------------
# Application Configuration
# --------------------------------------------
PORT=3000
LOG_LEVEL=info

# --------------------------------------------
# File Upload Configuration
# --------------------------------------------
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# --------------------------------------------
# AI Service Configuration (Optional)
# --------------------------------------------
# For AI planning assistant features
# OPENAI_API_KEY=sk-...

# --------------------------------------------
# CORS Configuration
# --------------------------------------------
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# --------------------------------------------
# Social Login (Optional)
# --------------------------------------------
# Google OAuth
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth
# FACEBOOK_CLIENT_ID=your-facebook-app-id
# FACEBOOK_CLIENT_SECRET=your-facebook-app-secret
